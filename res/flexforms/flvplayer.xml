<?xml version="1.0" encoding="utf-8"?>
<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:media/locallang_db.xml:media.files</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<file>
						<TCEforms>
							<label>LLL:EXT:media/locallang_db.xml:media.file</label>
							<config>
								<type>group</type>
								<internal_type>file</internal_type>
								<allowed>flv,f4v</allowed>
								<size>1</size>
								<autoSizeMax>1</autoSizeMax>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
								<show_thumbs>0</show_thumbs>
								<selectedListStyle>height:18px;width:300px</selectedListStyle>
							</config>
						</TCEforms>
					</file>
					
					<poster>
						<TCEforms>
							<label>LLL:EXT:media/locallang_db.xml:media.poster</label>
							<config>
								<type>group</type>
								<internal_type>file</internal_type>
								<allowed>jpg,png,jpeg,gif</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
								<show_thumbs>1</show_thumbs>
								<selectedListStyle>height:18px;width:250px</selectedListStyle>
							</config>
						</TCEforms>
					</poster>
					
					<width>
						<TCEforms>
							<label>LLL:EXT:cms/locallang_ttc.xml:media.width</label>
							<config>
								<type>input</type>
								<size>8</size>
								<max>5</max>
								<eval>trim</eval>
							</config>
						</TCEforms>
					</width>
					<height>
						<TCEforms>
							<label>LLL:EXT:cms/locallang_ttc.xml:media.height</label>
							<config>
								<type>input</type>
								<size>8</size>
								<max>5</max>
								<eval>trim</eval>
							</config>
						</TCEforms>
					</height>
				</el>
			</ROOT>
		</sDEF> 
	</sheets>
</T3DataStructure>