			  CenterSinglePage="true"

			  RightToLeft="false"
			  VerticalMode="false"
			  OffsetX="0"
			  OffsetY="0"
			  
			  PageScale="true"
			  MaxScale="500"
			  BaseStageWidth="{flexform.width}"
			  BaseStageHeight="{flexform.height}"
			  
			  Hardcover="false"
