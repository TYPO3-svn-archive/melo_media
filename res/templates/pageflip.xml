			  BackgroundColor="0xdFdFdF"
			  buttonColor="0x333333"
			  buttonOverColor="0xF0B400"
			  buttonPressColor="0x333333"
			  
			  startAutoFlip="false"
			  AutoFlipDefaultInterval="5"
			  AutoFlipLooping="true"
			  			  
			  TransparencyEnabled="true"
			  TransparencyActivePage="true"
			  
